generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())

  Despenses Despenses[]
  @@map("user")
}

model Despenses {
  id            String          @id @default(uuid())
  name          String
  categorie     String
  description   String?
  due_date      DateTime
  value         Float
  repetitions   Int?
  status        DespensesStatus @default(active)
  created_at    DateTime        @default(now())
  finish_status DateTime?       @default(now()) @updatedAt
  user          User            @relation(fields: [id_user], references: [id])
  id_user       String


  @@map("despenses")
}

enum DespensesStatus {
  active
  inactive
}
